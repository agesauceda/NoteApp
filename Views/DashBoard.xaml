<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NoteApp.Views.DashBoard"
             xmlns:tabbar="clr-namespace:NoteApp.Views.components.Navbar"
             xmlns:dashboard="clr-namespace:NoteApp.Views.components.Dashboard"
             Title="DashBoard">

    <Grid>

        <ScrollView>
            <VerticalStackLayout x:Name="DashboardContent" Padding="10">

            </VerticalStackLayout>
        </ScrollView>


        <HorizontalStackLayout>
            <ImageButton Source="add.png"
                     HeightRequest="80"
                     WidthRequest="80"
                     BackgroundColor="Transparent"
                     HorizontalOptions="End"
                     VerticalOptions="End"
                     Clicked="LogoutClicked"/>

            <ImageButton Source="add.png"
                     HeightRequest="80"
                     WidthRequest="80"
                     BackgroundColor="Transparent"
                     HorizontalOptions="End"
                     VerticalOptions="End"
                     Clicked="OnAddNoteClicked"/>
        </HorizontalStackLayout>
    </Grid>
</ContentPage>
