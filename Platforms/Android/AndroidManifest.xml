<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">
	<application android:allowBackup="true" android:icon="@mipmap/logomaui" android:roundIcon="@mipmap/logomaui" android:supportsRtl="true" android:usesCleartextTraffic="true">
