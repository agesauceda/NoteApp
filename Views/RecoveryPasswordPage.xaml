<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NoteApp.Views.RecoveryPasswordPage"
             Shell.NavBarIsVisible="False"
             Title="RecoveryPasswordPage">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Frame CornerRadius="10" Padding="20" BorderColor="LightGray" ZIndex="1" HasShadow="True">
            <Frame.Shadow>
                <Shadow Brush="Black" Opacity="0.5" Radius="10" Offset="5,5"/>
            </Frame.Shadow>
            
            <VerticalStackLayout Spacing="5">
                <Label Text="Recuperación de Cuenta" FontAttributes="Bold" FontSize="16" TextColor="Black" HorizontalOptions="Center" Margin="0,0,0,5"/>
                <Label Text="Ingrese su correo electrónico" FontAttributes="Bold" FontSize="14" TextColor="Gray"/>
                <Entry x:Name="txtTelRecover" Placeholder="99999999" Keyboard="Telephone" />
            </VerticalStackLayout>
        </Frame>
        <Button Text="Enviar Petición" BackgroundColor="#50b3f2" TextColor="White" CornerRadius="5" HeightRequest="45" Clicked="RecoveryPasswordButton_Clicked"/>
    </VerticalStackLayout>
</ContentPage>